  "module": "dist/herajs-crypto.esm.js",
  "browser": "dist/herajs-crypto.umd.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
