{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["mocha"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}